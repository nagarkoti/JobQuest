
@{
    ViewBag.Title = "AdminLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="container">
    <div id="header">
        <a href="index.cshtml" id="logo" target="_blank"><img src="http://demo.phpjabbers.com/source/jpw/admin/app/web/img/backend/logo.png" alt=""></a>
    </div>
    <div id="middle">
        <div id="login-content">
            <div class="login-box">

                <h3>Admin Login</h3>

                <form action="/source/jpw/admin/index.php?controller=pjAdmin&amp;action=pjActionLogin" method="post" id="frmLoginAdmin" class="form" novalidate="novalidate">
                    <input type="hidden" name="login_user" value="1">
                    <p>
                        <label class="title">Email:</label>
                        <span class="pj-form-field-custom pj-form-field-custom-before">
                            <span class="pj-form-field-before"><abbr class="pj-form-field-icon-email"></abbr></span>
                            <input name="login_email" type="text" class="pj-form-field required email w250" id="login_email" value="admin@admin.com">
                        </span>
                    </p>
                    <p>
                        <label class="title">Password:</label>
                        <span class="pj-form-field-custom pj-form-field-custom-before">
                            <span class="pj-form-field-before"><abbr class="pj-form-field-icon-password"></abbr></span>
                            <input name="login_password" type="password" class="pj-form-field required w250" id="login_password" value="pass" autocomplete="off">
                        </span>
                    </p>
                    <p>
                        <label class="title">&nbsp;</label>
                        <input type="submit" value="Login" class="pj-button float_left">
                        <a class="no-decor l10 block float_left r10 t5" href="http://demo.phpjabbers.com/source/jpw/admin/index.php?controller=pjAdmin&amp;action=pjActionForgot">Forgot password</a>
                        <span class="no-decor block float_left r10 t5">|</span>
                        <a class="no-decor l10 block  t5" href="http://demo.phpjabbers.com/source/jpw/admin/index.php?controller=pjAdmin&amp;action=pjActionEmployerLogin">Employer login</a>
                    </p>
                </form>
            </div>
        </div>
    </div> <!-- middle -->
</div>

